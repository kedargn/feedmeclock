<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.clock.pervasive.feedmeclock.ScheduleActivity"
    tools:showIn="@layout/activity_schedule">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bruno&apos;s Feeding Schedule"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meal 1"
        android:id="@+id/textView3"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/timePicker2" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker1"
        android:timePickerMode="spinner"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="10dp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker2"
        android:timePickerMode="spinner"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="10dp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker3"
        android:timePickerMode="spinner"
        android:layout_marginTop="400dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meal 2"
        android:layout_marginTop="290dp"
        android:id="@+id/textView4"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meal 3"
        android:id="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="470dp" />


</RelativeLayout>
